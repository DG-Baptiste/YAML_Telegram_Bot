function promptDeleteYAML(chatId) {
  var yamlButtons = getUserYAMLButtons(chatId);
  
  if (!yamlButtons || yamlButtons.length === 0) {
    sendMessage(chatId, "‚ö†Ô∏è You don't have any YAML files to delete.");
    showMainMenu(chatId);
    return;
  }

  var keyboard = yamlButtons.map(function(button) {
    return [{ text: "üóëÔ∏è Delete " + button.name }];  
  });

  keyboard.push([{ text: "‚ùå Cancel" }]);

  var replyMarkup = {
    keyboard: keyboard,
    resize_keyboard: true,
    one_time_keyboard: true
  };
  
  sendMessage(chatId, "üóëÔ∏è Please choose a YAML file to delete.", replyMarkup);
}


//function to delete YAML FILE
function deleteYAMLFile(chatId, fileName) {
  userYAMLButtons[chatId] = getUserYAMLButtons(chatId);

  if (userYAMLButtons[chatId]) {
    var index = userYAMLButtons[chatId].findIndex(button => button.name === fileName);
    
    if (index !== -1) {
      userYAMLButtons[chatId].splice(index, 1); 
      storeUserYAMLButtons(chatId);  

      sendMessage(chatId, `üóëÔ∏è YAML file "${fileName}" has been deleted.`);
    } else {
      sendMessage(chatId, `‚ö†Ô∏è YAML file "${fileName}" not found.`);
    }
  } else {
    sendMessage(chatId, "‚ö†Ô∏è No YAML files to delete.");
  }

  showMainMenu(chatId); 
}
